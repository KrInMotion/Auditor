@model IEnumerable<Auditor.ViewModels.WifiCheck.WifiCheckListVM>
@{
    ViewBag.Title = "WiFi проверка";
}
<div class="container">

    <div class="page-header">
        <h3>Проверка WiFi точек</h3>
    </div>
    <ol class="breadcrumb">
        <li>
            <a asp-controller="Home" asp-action="Index">Главная</a>
        </li>
        <li class="active">WiFi проверка</li>
    </ol>
    <div class="panel panel-success">
        <div class="panel-body">
            <a asp-controller="WiFiCheck", asp-action="Create" class="btn btn-default" role="button" title="Создать новую проверку WiFi">Создать</a>
            <form id="searchForm" asp-controller="WiFiCheck" asp-action="Index">
                <div class="input-group">

                </div>
            </form>
            <div class="clearfix"></div>
        </div>
    </div>
    @if (Model.Any())
    {
        <div id="checkList">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="text-center">@Html.DisplayNameFor(m => m.Address)</th>
                        <th class="text-center">@Html.DisplayNameFor(m => m.Provider)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @item.Address
                            </td>
                        </tr>
                        <tr>
                            <td class="text-center">
                                @item.Provider
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <div class="text-center">
                <strong>Проверок пока нет, но ничего не мешает добавить их!</strong>
            </div>
        </div>
    }
</div>
